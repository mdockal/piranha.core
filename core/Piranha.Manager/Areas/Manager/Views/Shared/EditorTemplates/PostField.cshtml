@model Piranha.Extend.Fields.PostField
@{
    var prefix = Html.ViewData.TemplateInfo.HtmlFieldPrefix
        .Replace("[", "_").Replace("]", "_").Replace(".", "_");
}

<div class="row">
    <div class="col-xs-9">
        @Html.HiddenFor(m => m.Id)
        <div class="well well-sm">
            <a id="@(prefix)_Title" href="#" >@(Model.Post != null ? Model.Post.Title : "")</a>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="btn-group btn-group-justified" role="group">
            <div class="btn-group" role="group" style="padding-right:5px">
                <button class="btn btn-primary btn-block" type="button" data-toggle="modal" data-target="#modalPost" data-postid="@(prefix)_Id" data-posttitle="@(prefix)_Title">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
            <div class="btn-group" role="group" style="padding-left:5px">
                <button class="btn btn-danger btn-block btn-post-clear" type="button" data-postid="@(prefix)_Id" data-posttitle="@(prefix)_Title">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    </div>
</div>
